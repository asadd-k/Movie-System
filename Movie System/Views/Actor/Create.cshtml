@model Actor

@{
    ViewData["Title"] = "Add Actor" ; 
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>
                Add a New Actor
            </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="profilepicURL"></label>
                        <input asp-for="profilepicURL"/>
                        <span asp-validation-for="profilepicURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Name"></label>
                        <input asp-for="Name"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Description"></label>
                        <input asp-for="Description"/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <input type="submit" asp-action="Create" value="Create" class="btn btn-success float-right"/>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
