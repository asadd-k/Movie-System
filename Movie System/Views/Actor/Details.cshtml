@model Actor

@{
    ViewData["Title"] = "Actor Details"; 
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>
                @Model.Name 
            </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group">
                        <label class="control-label" asp-for="profilepicURL"></label>
                        <input asp-for="profilepicURL"/>
                        <span asp-validation-for="profilepicURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Name"></label>
                        <input asp-for="Name"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Description"></label>
                        <input asp-for="Description"/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <a class="btn btn-primary" asp-action="Edit">Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
            </div>
        </div>
    </div>
</div>
