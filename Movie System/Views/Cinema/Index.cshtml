
@model IEnumerable<Cinema>


@{
    ViewData["Title"] = "Index";
}

<style>
    .imagesize{
        max-width:150px
    }
</style>


<div class="container"> 
    <table class="table">
        <thead>
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.logoURL)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                 <th>Actions</th>
            </tr>
        </thead>
        <tdata>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle"><img class="rounded-circle imagesize" src="@item.logoURL" alt="@item.Name"></td>
                    <td class="align-midle">@item.Name</td>
                    <td class="align-midle">@item.Description</td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
                        <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                </tr>
            }
        </tdata>
    </table>
</div>

